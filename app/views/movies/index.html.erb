<p style="color: green"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% content_for :title, "Movies" %>
      <h1>Movies</h1>
      <div id="movies">
        <% @movies.each do |movie| %>
          <%= render movie %>
          <p>
            <%= link_to "Show this movie", movie %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>


